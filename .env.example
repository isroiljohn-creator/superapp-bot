# ──────────────────────────────────────────────────────────────
# SuperApp Bot — Environment Variables Template
# Copy to .env and fill in your values before deploying.
# ──────────────────────────────────────────────────────────────

# ── Telegram ──────────────────────────────────────────────────
BOT_TOKEN=your_bot_token_here
# Full URL where your Railway web service is deployed (no trailing slash)
WEBAPP_URL=https://your-service.up.railway.app

# ── Database (PostgreSQL via Supabase or Railway) ─────────────
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# ── Redis ─────────────────────────────────────────────────────
# Used for: ARQ task queue + aiogram FSM storage
REDIS_URL=redis://default:password@host:6379

# ── Admin Settings ────────────────────────────────────────────
# Comma-separated Telegram user IDs of admins
ADMIN_IDS_STR=123456789,987654321
# Optional API key for programmatic admin access
ADMIN_API_KEY=

# Bot settings
PRIVATE_GROUP_ID=0
CLUB_PRICE=97000

# ── Feature Flags ─────────────────────────────────────────────
# Set to true only when payment provider keys are configured
PAYMENTS_ENABLED=false
# Set to false to disable event tracking (for testing)
ANALYTICS_ENABLED=true

# ── Payments — Click.uz ───────────────────────────────────────
CLICK_MERCHANT_ID=
CLICK_SERVICE_ID=
CLICK_SECRET_KEY=

# ── Payments — Payme ──────────────────────────────────────────
PAYME_MERCHANT_ID=
PAYME_SECRET_KEY=

# ── Telegram Payments (Stars / provider token) ────────────────
PAYMENT_PROVIDER_TOKEN=
